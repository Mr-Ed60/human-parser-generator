<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         DefaultTargets="Clean;RunGenerated">
  <PropertyGroup>
    <ProjectGuid>{039EDDD8-0709-46F3-B368-9B68A567E6A7}</ProjectGuid>
    <ProjectTypeGuids>{895D3B2E-FF56-403E-BA28-B91D67C73D0F}</ProjectTypeGuids>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">x86</Platform>
    <OutputType>Exe</OutputType>
    <RootNamespace>HumanParserGenerator</RootNamespace>
    <AssemblyName>pascal</AssemblyName>
    <TargetFrameworkVersion>v4.5.1</TargetFrameworkVersion>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <ExeLauncher Condition="('$(OS)' != 'Windows_NT')">mono</ExeLauncher>
    <NUnitConsole Condition="('$(OS)' != 'Windows_NT')">nunit-console -nologo</NUnitConsole>
    <NUnitConsole Condition="('$(OS)' == 'Windows_NT')">mono nunit-console.exe -nologo</NUnitConsole>
    <Diff Condition="('$(OS)' != 'Windows_NT')">diff -u -w </Diff>
    <Diff Condition="('$(OS)' == 'Windows_NT')">fc.exe</Diff>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Platform)' == 'x86' ">
    <PlatformTarget>x86</PlatformTarget>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <OutputPath>bin\Debug\</OutputPath>
    <DebugSymbols>True</DebugSymbols>
    <DebugType>Full</DebugType>
    <Optimize>False</Optimize>
    <CheckForOverflowUnderflow>True</CheckForOverflowUnderflow>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <OutputPath>bin\Release\</OutputPath>
    <DebugSymbols>False</DebugSymbols>
    <DebugType>None</DebugType>
    <Optimize>True</Optimize>
    <CheckForOverflowUnderflow>False</CheckForOverflowUnderflow>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="Microsoft.CSharp">
      <RequiredTargetFramework>4.0</RequiredTargetFramework>
    </Reference>
    <Reference Include="System" />
    <Reference Include="System.Collections" />
    <Reference Include="System.Core">
      <RequiredTargetFramework>3.5</RequiredTargetFramework>
    </Reference>
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq">
      <RequiredTargetFramework>3.5</RequiredTargetFramework>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <!-- Common Sources -->
    <Compile Include="..\..\generator\parsable.cs" />
    <Compile Include="..\..\generator\dump-ast.cs" />
    <!-- Additional Manual Sources -->
    <Manual Include="pascal.cs" />
    <!-- Additional Generated Sources -->
    <Generated Include="pascal-generated.cs" />
    <!-- Files To Be Cleaned Up -->
    <FileWrites Include="$(OutputPath)*"/>
    <FileWrites Include="parser.cs"/>
  </ItemGroup>
  <ItemGroup>
    <None Include="packages.config" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />

  <Target Name="MakeBuildDirectory"
          BeforeTargets="Manual;Generated">  
      <MakeDir Directories="$(OutputPath)" />  
  </Target>

  <Target Name="Manual"
          Inputs="@(Compile);@(Manual);example.pas"
          Outputs="$(OutputPath)pascal-manual.exe">
    <CSC Sources="@(Compile);@(Manual)"  
         TargetType="exe"
         OutputAssembly="$(OutputPath)pascal-manual.exe"  
         EmitDebugInformation="true" />
    <Exec Command="$(ExeLauncher) $(OutputPath)pascal-manual.exe example.pas" />
  </Target>

  <Target Name="Generated"
          Inputs="@(Compile);@(Generated);example.pas;pascal-assignments.bnf"
          Outputs="$(OutputPath)pascal-generated.exe">
    <MSBuild Projects="../../hpg.csproj" />
    <Exec Command="$(ExeLauncher) ..\..\$(OutputPath)\hpg.exe -i pascal-assignments.bnf > pascal-generated.cs" />
    <CSC Sources="@(Compile);@(Generated)"
         TargetType="exe"
         OutputAssembly="$(OutputPath)pascal-generated.exe"  
         EmitDebugInformation="true" />   
  </Target>

  <Target Name="Compare"
          DependsOnTargets="Manual;Generated">
    <Exec Command="$(Diff) pascal.cs pascal-generated.cs"/>
  </Target>

  <Target Name="RunGenerated"
          DependsOnTargets="Compare">
    <Exec Command="$(ExeLauncher) $(OutputPath)pascal-generated.exe example.pas" />
  </Target>
          
</Project>
